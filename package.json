{
  "name": "update-nodes",
  "version": "0.1.4",
  "description": "Update recommended Node.js versions",
  "repository": "fisker/update-nodes",
  "license": "MIT",
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "main": "dist/cli",
  "bin": {
    "update-nodes": "dist/cli"
  },
  "scripts": {
    "build": "run-p build:*",
    "build:js": "rollup --config",
    "clean": "run-p clean:*",
    "clean:dist": "del-cli dist",
    "dist": "run-p dist:*",
    "dist:npm": "np --yolo --no-yarn",
    "format": "run-p format:*",
    "format:eslint": "yarn lint:eslint --fix",
    "format:markdown": "yarn lint:markdown --fix",
    "format:package-json": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "format:prettier": "yarn lint:prettier --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint \"**/*.{js,mjs,vue}\"",
    "lint:markdown": "markdownlint \"**/*.md\" --ignore \"**/node_modules/**\"",
    "lint:package-json": "yarn run format:package-json --check",
    "lint:prettier": "prettier \"**/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml}\" --check",
    "release": "run-s lint build format test dist",
    "test": "ava",
    "test-coverage": "nyc ava"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "require": "esm",
    "verbose": true
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "require": "esm"
  },
  "dependencies": {
    "enquirer": "2.3.2",
    "execa": "4.0.0",
    "listr": "0.14.3",
    "meow": "6.0.0",
    "nodejs-recommended-versions": "1.0.13",
    "ora": "4.0.3",
    "signale": "1.4.0",
    "update-notifier": "4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.3",
    "@fisker/commitlint-config": "1.1.4",
    "@fisker/eslint-config": "1.6.0",
    "@fisker/husky-config": "1.1.5",
    "@fisker/lint-staged-config": "1.0.8",
    "@fisker/prettier-config": "1.0.24",
    "ava": "2.4.0",
    "cz-conventional-changelog": "3.0.2",
    "del-cli": "3.0.0",
    "eslint": "6.8.0",
    "esm": "3.2.25",
    "husky": "3.1.0",
    "lint-staged": "9.5.0",
    "markdownlint-cli": "0.20.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.0.0",
    "prettier": "1.19.1",
    "rollup": "1.27.14",
    "sort-package-json": "1.35.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
